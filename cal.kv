#: kivy 1.10.1 
#: import Factory kivy.factory.Factory

<MyPopup>:
    title:"History"
    auto_dismiss:True
    size_hint: 0.7, 0.7
    BoxLayout:
        orientation:'vertical'
        size:root.width,root.height
        background_color:0.5,0.5,0.5,1
        padding: ('20dp', '20dp', '20dp', '20dp')
        canvas.before:
            Color:
                rgba:self.background_color
            RoundedRectangle:
                size:self.size
                radius:[10]
                pos:self.pos
        Label:
            id:History
            valign:"top"
            text:root.history_show()
            text_size:self.size
            color:0,0,0,0.8
            size_hint: 1,1 
            halign:"left"    
            

        RoundedButton:
            size_hint: 0.5,0.2
            text:"Delete"
            font_size:15
            color:1,1,1,1
            on_press:root.history_clear()

<RoundedButton@Button>:
    pos_hint: {'center_x': 0.5}
    background_color:(0,0,0,0)
    background_normal:''
    canvas.before:
        Color:
            rgba:50/255,50/255,50/255,0.8
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[8]
    


<MyLayout>:
    BoxLayout:
        orientation:'vertical'
        size:root.width,root.height
        GridLayout:
            size: root.width,root.height
            rows:2 
            AnchorLayout: 
                anchor_x: 'center'
                anchor_y: 'center'                
                pos: self.parent.pos
                size:self.parent.size
                #size_hint:0.4,0.4
                size_hint: 1,0.3
                TextInput:
                    id:Text_in
                    text:'0' 
                    multiline:False
                    halign:"right"
                    font_size: 30
                    #padding: ('10dp', '40dp', '10dp', '0dp')
                    readonly:True
                    selection_color:170/255,170/255,170/255,0.7
            GridLayout:
                cols:4
                rows:5
                
                Button:
                    background_color:1,1,0,1
                    text: "History"
                    font_size:15
                    color: 0 , 0 , 0 , 1
                    bold:True
                    on_press: Factory.MyPopup().open(),Factory.MyPopup().history_show()
                Button:
                    background_color:1,1,0,1
                    text: 'C'
                    font_size:20
                    color: 0 , 0 , 0 , 1
                    bold:True
                    on_press: root.clear()
                Button:
                    background_color:1,1,0,1
                    on_press:root.remove()
                    AnchorLayout: 
                        anchor_x: 'center'
                        anchor_y: 'center'
                        pos: self.parent.pos
                        size:self.parent.size
                        size_hint:0.4,0.4
                        Image:
                            source:'backspace.png'
                            size_hint: self.parent.size_hint
                            allow_stretch:True
                            pos: self.parent.pos
                Button:
